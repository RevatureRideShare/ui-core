#!groovy

pipeline {
    agent any
    triggers {
        pollSCM('H H/8 * * *')
    }    
    stages {
        stage('Install') {
            steps {
                sh '''
                    echo FirstDir
                    pwd
                    . ~/.nvm/nvm.sh
                    echo SecondDir
                    pwd
                    cd /home/ec2-user/.jenkins/workspace/ore_chore_1-PhantomJS-dependency/RideShare
		            npm install
                '''
            }
         }
         /*
        stage('test') {
              steps {
                sh '''
                    cd /home/ec2-user/.jenkins/workspace/ore_chore_1-PhantomJS-dependency/RideShare
		                npm install
                    npm run test-headless
                '''
            }
        }
        */
        stage('Build') {
              steps {
                
                sh '''
                    echo ThirdDir
                    pwd
                    cd /home/ec2-user/.jenkins/workspace/ore_chore_1-PhantomJS-dependency/RideShare
		            ng build
                '''
            }
        }
        
        stage('Deploy') {
              steps {
                script{
                  if(env.BRANCH_NAME == 'chore/master'){
                    sh '''
                        cd /home/ec2-user/.jenkins/workspace/master/RideShare
                        aws s3 cp --recursive ./dist/Project3 s3://rideshare-client
                    '''
                  }
                }
            }
        }
    }
}