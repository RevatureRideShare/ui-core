#!groovy

pipeline {
    agent any
    triggers {
        pollSCM('H H/8 * * *')
    }    
    options { 
        checkoutToSubdirectory('RideShare')
        disableConcurrentBuilds()
    }
    stages {
        stage('Install') {
            steps {
                sh '''
                    . ~/.nvm/nvm.sh
                    pwd
		            npm install
                '''
            }
         }
         /*
        stage('test') {
              steps {
                sh '''
                    . ~/.nvm/nvm.sh
                    npm run test-headless
                '''
            }
        }
        */
        stage('Build') {
              steps {
                
                sh '''
                    . ~/.nvm/nvm.sh 
		            ng build
                '''
            }
        }
        
        stage('Deploy') {
              steps {
                script{
                  if(env.BRANCH_NAME == 'chore/master'){
                    sh '''
                        cd /home/ec2-user/.jenkins/workspace/master/RideShare
                        aws s3 cp --recursive ./dist/Project3 s3://rideshare-client
                    '''
                  }
                }
            }
        }
    }
}